<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.outing.medicine"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- Magnifiter -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- FlashLight -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".Welcome"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FirstRun"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".login.Login"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".login.Register"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".login.RegisterSucceed"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".login.FindPassword"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".contact.ContactAdd"
            android:launchMode="singleInstance"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".contact.ContactSelect"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".contact.ContactShow"
            android:label="@string/app_name"></activity>
        <!-- fun_tools -->
        <activity
            android:name=".fun_tools.ToolsMain"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".fun_tools.Calculator"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".fun_tools.Flashlight"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".personal_center.PersonalCenterActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".fun_tools.Magnifiter"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>