<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TimePicker
                android:id="@+id/fun_remind_addtimer_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/remind_addtimer_et_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:editable="false"
                android:gravity="center"
                android:padding="10dp"
                android:singleLine="true"
                android:text="声音与振动提醒"
                android:textSize="26sp" />


            <EditText
                android:id="@+id/remind_addtimer_et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:hint="闹钟备注（选填）"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="26sp" />

            <Button
                android:id="@+id/remind_addtimer_btn_sure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/btn_1"
                android:padding="5dp"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:tag="占位专用" />

            <Button
                android:id="@+id/remind_addtimer_btn_del"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/btn_3"
                android:padding="5dp"
                android:text="删除闹钟"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>