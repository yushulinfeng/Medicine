<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab_line_dark"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tab_iv_line"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="@color/tab_line_light" >
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/tab_linear_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tab_btn_bg_dark"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="3dip"
            android:saveEnabled="false" >

            <ImageView
                android:id="@+id/tab_iv_index"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/tab_btn_index_light" />

            <TextView
                android:id="@+id/tab_tv_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="主页面"
                android:textColor="@color/tab_btn_light"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_linear_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tab_btn_bg_dark"
            android:focusable="false"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="3dip" >

            <ImageView
                android:id="@+id/tab_iv_my"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/tab_btn_my_dark" />

            <TextView
                android:id="@+id/tab_tv_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="联系人"
                android:textColor="@color/tab_btn_dark"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>