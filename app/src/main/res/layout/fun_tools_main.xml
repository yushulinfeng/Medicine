<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/fun_tools_award"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="抽奖啰"
                android:textSize="@dimen/tools_main_btn_size" />
            <Button
                android:id="@+id/fun_tools_calculator"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="计算器"
                android:textSize="@dimen/tools_main_btn_size" />

            <Button
                android:id="@+id/fun_tools_flashlight"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="手电筒"
                android:textSize="@dimen/tools_main_btn_size" />

            <Button
                android:id="@+id/fun_tools_magnifiter"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="放大镜"
                android:textSize="@dimen/tools_main_btn_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>