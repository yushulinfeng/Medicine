<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_deep"
    android:orientation="vertical">

    <include layout="@layout/top" />

    <org.outing.medicine.tools.view.SpringScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:tag="相当于顶部padding了5dp" />

            <org.outing.medicine.tools.view.DrawableButton
                android:id="@+id/fun_tools_award"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_2"
                android:drawableLeft="@drawable/fun_tools_icon_award"
                android:drawablePadding="5dp"
                android:gravity="start|center_vertical"
                android:text="抽奖啰"
                android:textColor="@color/white"
                android:textSize="@dimen/tools_main_btn_size" />

            <org.outing.medicine.tools.view.DrawableButton
                android:id="@+id/fun_tools_calculator"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_1"
                android:drawableLeft="@drawable/fun_tools_icon_calculator"
                android:drawablePadding="5dp"
                android:gravity="start|center_vertical"
                android:text="计算器"
                android:textColor="@color/white"
                android:textSize="@dimen/tools_main_btn_size" />

            <org.outing.medicine.tools.view.DrawableButton
                android:id="@+id/fun_tools_flashlight"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_4"
                android:drawableLeft="@drawable/fun_tools_icon_flashlight"
                android:drawablePadding="5dp"
                android:gravity="start|center_vertical"
                android:text="手电筒"
                android:textColor="@color/white"
                android:textSize="@dimen/tools_main_btn_size" />

            <org.outing.medicine.tools.view.DrawableButton
                android:id="@+id/fun_tools_magnifiter"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_6"
                android:drawableLeft="@drawable/fun_tools_icon_magnifiter"
                android:drawablePadding="5dp"
                android:gravity="start|center_vertical"
                android:text="放大镜"
                android:textColor="@color/white"
                android:textSize="@dimen/tools_main_btn_size" />

            <org.outing.medicine.tools.view.DrawableButton
                android:id="@+id/fun_tools_where"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_5"
                android:drawableLeft="@drawable/fun_tools_icon_where"
                android:drawablePadding="5dp"
                android:gravity="start|center_vertical"
                android:text="我在哪"
                android:textColor="@color/white"
                android:textSize="@dimen/tools_main_btn_size" />

            <org.outing.medicine.tools.view.DrawableButton
                android:id="@+id/fun_tools_sos"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_3"
                android:drawableLeft="@drawable/fun_tools_icon_sos"
                android:drawablePadding="5dp"
                android:gravity="start|center_vertical"
                android:text=" S O S "
                android:textColor="@color/white"
                android:textSize="@dimen/tools_main_btn_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:tag="相当于底部padding了5dp" />
        </LinearLayout>
    </org.outing.medicine.tools.view.SpringScrollView>

</LinearLayout>